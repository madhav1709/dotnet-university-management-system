@page "/Campuses"
@attribute [Authorize]
@layout MainLayout
@inject HttpClient HttpClient

<TemplatedHeader Subtitle="Click on an icon in the table below to view more info." Title="Campuses">
    <ToolbarContent>
        <a class="btn btn-primary mdi mdi-plus" href="Campuses/0">Create</a>
    </ToolbarContent>
</TemplatedHeader>

<TemplatedTable Loader="@GetCampuses">
    <HeaderContent>
        <th>Name</th>
    </HeaderContent>

    <ItemContent Context="campus">
        <td>@campus.Name</td>
        <td><a href="Campuses/@campus.Id"><span class="mdi mdi-pencil"></span></a></td>
    </ItemContent>
</TemplatedTable>

@code
{

    private async Task<IEnumerable<Models.Campus>> GetCampuses()
    {
        return await HttpClient.GetJsonAsync<IEnumerable<Models.Campus>>("Campuses");
    }

}