@page "/Buildings"
@layout AuthenticationGuard
@inject HttpClient HttpClient

<TemplatedHeader Subtitle="Click on an icon in the table below to view more info." Title="Buildings">
    <ToolbarContent>
        <a class="btn btn-primary mdi mdi-plus" href="Buildings/0">Create</a>
    </ToolbarContent>
</TemplatedHeader>

<TemplatedTable Loader="@GetBuildings">
    <HeaderContent>
        <th>Name</th>
    </HeaderContent>

    <ItemContent Context="building">
        <td>@building.Name</td>
        <td><a href="Buildings/@building.Id"><span class="mdi mdi-pencil"></span></a></td>
    </ItemContent>
</TemplatedTable>

@functions
{

    private async Task<IEnumerable<Models.Building>> GetBuildings()
    {
        return await HttpClient.GetJsonAsync<IEnumerable<Models.Building>>("Buildings");
    }

}