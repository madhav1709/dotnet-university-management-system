@page "/Lectures"
@layout AuthenticationGuard
@inject HttpClient HttpClient

<TemplatedHeader Subtitle="Click on an icon in the table below to view more info." Title="Lectures">
    <ToolbarContent>
        <a class="btn btn-primary mdi mdi-plus" href="Lectures/0">Create</a>
    </ToolbarContent>
</TemplatedHeader>

<TemplatedTable Loader="@GetLectures">
    <HeaderContent>
        <th>Date Time</th>
        <th>Duration</th>
    </HeaderContent>

    <ItemContent Context="lecture">
        <td>@lecture.DateTime</td>
        <td>@lecture.Duration</td>
        <td><a href="Lectures/@lecture.Id"><span class="mdi mdi-pencil"></span></a></td>
    </ItemContent>
</TemplatedTable>

@functions
{

    private async Task<IEnumerable<Models.Lecture>> GetLectures()
    {
        return await HttpClient.GetJsonAsync<IEnumerable<Models.Lecture>>("Lectures");
    }

}