@page "/Libraries"
@layout AuthenticationGuard
@inject HttpClient HttpClient

<TemplatedHeader Subtitle="Click on an icon in the table below to view more info." Title="Libraries">
    <ToolbarContent>
        <a class="btn btn-primary mdi mdi-plus" href="Libraries/0">Create</a>
    </ToolbarContent>
</TemplatedHeader>

<TemplatedTable Loader="@GetLibraries">
    <HeaderContent>
        <th>Name</th>
    </HeaderContent>

    <ItemContent Context="library">
        <td>@library.Name</td>
        <td><a href="Libraries/@library.Id"><span class="mdi mdi-pencil"></span></a></td>
    </ItemContent>
</TemplatedTable>

@functions
{

    private async Task<IEnumerable<Models.Library>> GetLibraries()
    {
        return await HttpClient.GetJsonAsync<IEnumerable<Models.Library>>("Libraries");
    }

}