@page "/Modules"
@layout AuthenticationGuard
@inject HttpClient HttpClient

<TemplatedHeader Subtitle="Click on an icon in the table below to view more info." Title="Modules">
    <ToolbarContent>
        <a class="btn btn-primary mdi mdi-plus" href="Modules/0">Create</a>
    </ToolbarContent>
</TemplatedHeader>

<TemplatedTable Loader="@GetModules">
    <HeaderContent>
        <th>Code</th>
        <th>Title</th>
    </HeaderContent>

    <ItemContent Context="module">
        <td>@module.Code</td>
        <td>@module.Title</td>
        <td><a href="Modules/@module.Id"><span class="mdi mdi-pencil"></span></a></td>
    </ItemContent>
</TemplatedTable>

@functions
{

    private async Task<IEnumerable<Models.Module>> GetModules()
    {
        return await HttpClient.GetJsonAsync<IEnumerable<Models.Module>>("Modules");
    }

}