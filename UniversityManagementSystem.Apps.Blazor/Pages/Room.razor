@page "/Rooms/{RoomId:int}"
@layout AuthenticationGuard
@inject HttpClient HttpClient

<TemplatedHeader Subtitle="Use the form below to update or create a room." Title="Room">
    <ToolbarContent>
        <a class="btn btn-primary mdi mdi-cancel" href="Rooms">Cancel</a>
    </ToolbarContent>
</TemplatedHeader>

@if (IsLoading)
{
    <TemplatedSpinner/>
}
else
{
    <EditForm Model="@Model" OnValidSubmit="@OnValidSubmitAsync">
        <DataAnnotationsValidator/>
        <ValidationSummary/>

        <div class="form-group">
            <label for="name">Name</label>
            <InputText class="form-control" id="name" @bind-Value="@Model.Name"/>
            <ValidationMessage For="@(() => Model.Name)"/>
        </div>

        <div class="form-group">
            <label for="building">Building</label>
            <InputSelect class="form-control" id="building" @bind-Value="@Model.Building">
                @foreach (var building in Buildings)
                {
                    <option value="@building">@building.ToString()</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => Model.Building)"/>
        </div>

        <button class="btn btn-primary mdi mdi-content-save" type="submit">Save</button>
    </EditForm>
}

@code
{

    [Parameter]
    private int RoomId { get; set; }

    private bool IsCreating => RoomId <= 0;

    private bool IsLoading => Model == null || Buildings == null;

    private bool IsUpdating => RoomId > 0;

    private Models.Room Model { get; set; }
    
    private IEnumerable<Models.Building> Buildings { get; set; }

    protected override async Task OnInitAsync()
    {
        Buildings = await HttpClient.GetJsonAsync<IEnumerable<Models.Building>>("Buildings");
        
        if (IsUpdating)
        {
            Model = await HttpClient.GetJsonAsync<Models.Room>($"Rooms/{RoomId}");
        }
        else
        {
            Model = new Models.Room();
        }
    }

    private async Task OnValidSubmitAsync()
    {
        if (IsUpdating)
        {
            await HttpClient.PutJsonAsync($"Rooms/{RoomId}", Model);
        }
        else
        {
            await HttpClient.PostJsonAsync("Rooms", Model);
        }
    }

}