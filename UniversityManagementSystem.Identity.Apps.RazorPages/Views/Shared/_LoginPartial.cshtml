@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="mr-auto navbar-nav"></ul>

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-ReturnUrl="@Url.Page("/Index", new {area = ""})" method="post">
        <section class="authentication-info">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-light mr-sm-1">@UserManager.GetUserName(User)</a>
            <button class="btn btn-outline-light" type="submit">Logout</button>
        </section>
    </form>
}
else
{
    <section class="authentication-info">
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light">Login</a>
    </section>
}